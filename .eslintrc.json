{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "quotes": ["error", "double"],
    "no-console": ["error", { "allow": ["warn", "error", "info"] }]
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
