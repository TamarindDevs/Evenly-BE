{
  "name": "evenly-be",
  "version": "1.0.0",
  "description": "Evenly Backend",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "pm2 start dist/index.js -i max",
    "build": "tsc -p tsconfig.production.json",
    "dev": "nodemon src/index.ts",
    "configure-husky": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/billmal071/Evenly-BE.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/billmal071/Evenly-BE/issues"
  },
  "homepage": "https://github.com/billmal071/Evenly-BE#readme",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.23",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.13.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.20",
    "prettier": "^2.6.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@sentry/node": "^6.19.6",
    "@sentry/tracing": "^6.19.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-async-errors": "^3.1.1",
    "helmet": "^5.0.2",
    "js-yaml": "^4.1.0",
    "mongoose": "^6.2.10",
    "morgan": "^1.10.0",
    "pm2": "^5.2.0",
    "swagger-ui-express": "^4.3.0",
    "tsconfig-paths": "^3.14.1",
    "winston": "^3.7.2"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "git pull upstream main"
    }
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
